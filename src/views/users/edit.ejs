<%- include('../home-partials/header.ejs') %>

<!--Body-->
<main id="registrer">
    <div class="container my-5 py-5">
        <h1>Registro</h1>
        <form action="/users" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="">Nombre</label>
                <input type="text" class="form-control" name="name" id="" value="<%= user.firstName %>">
            </div>
            <div class="form-group">
                <label for="">Apellido</label>
                <input type="text" class="form-control" name="last_name" id="" value="<%= user.lastName %>">
            </div>
            <div class="form-group">
                <label for="">Email</label>
                <input type="email" class="form-control" name="email" id="" value="<%= user.emailName %>">
            </div>
            <div class="form-group">
                <label for="">Contraseña</label>
                <input type="password" class="form-control" name="pass" id="">
            </div>
            <div class="form-group">
                <label for="">Repetir contraseña</label>
                <input type="password" class="form-control" name="" id="">
            </div>
            <img src="/img/avatars/<%= user.image %>" alt="avatar" width="20%">
            <div class="form-group">
                <label for="">Foto de perfil</label>
                <input type="file" class="form-control" name="avatar" id="">
                <input type="hidden" class="form-control" name="oldAvatar" id="" value="<%= user.image %>">
            </div>
            <input class="btn btn-primary" type="submit" value="Registro">
        </form>
    </div>
</main>
<!--Body-->

<%- include('../home-partials/footer.ejs') %>