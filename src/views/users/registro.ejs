<%- include('../partials/header.ejs') %>

<!--Body-->
<main id="registrer">
    <div class="container my-5 py-5">
        <h1>Registro</h1>
        <form action="/users" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="">Nombre</label>
                <input type="text" class="form-control" name="name" id="">
            </div>
            <div class="form-group">
                <label for="">Apellido</label>
                <input type="text" class="form-control" name="last_name" id="">
            </div>
            <div class="form-group">
                <label for="">Email</label>
                <input type="email" class="form-control" name="email" id="">
            </div>
            <div class="form-group">
                <label for="">Usuario</label>
                <input type="text" class="form-control" name="user" id="">
            </div>
            <div class="form-group">
                <label for="">Contraseña</label>
                <input type="password" class="form-control" name="pass" id="">
            </div>
            <div class="form-group">
                <label for="">Repetir contraseña</label>
                <input type="password" class="form-control" name="" id="">
            </div>
            <div class="form-group">
                <label for="">Foto de perfil</label>
                <input type="file" class="form-control" name="avatar" id="">
            </div>
            <input class="btn btn-primary" type="submit" value="Registro">
        </form>
    </div>
</main>
<!--Body-->

