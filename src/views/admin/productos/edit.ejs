<%- include('../partials/head.ejs')  %>
<%- include('../partials/topnav.ejs')  %>
<div class="container-fluid">
    <div class="row">
        <%- include('../partials/sidenav.ejs') %>
        <%- include('../partials/main.ejs', { titulo : 'Editar Producto'}) %>
        <div class="container py-3">
            <form action="/productos/<%= producto.id %>?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">Nombre</label>
                    <input type="text" name="name" id="" class="form-control" value="<%= producto.name %> ">
                </div>
                <div class="form-group">
                    <label for="">Descripcion</label>
                    <textarea class="form-control" name="description" id=""
                        rows="3"><%= producto.description %></textarea>
                </div>
                <div class="form-group">
                    <label for="">Precio</label>
                    <input type="number" name="price" id="" class="form-control" placeholder="$"
                        value="<%= producto.price %>">
                </div>
                <div class="form-group">
                    <label for="">Descuento</label>
                    <input type="number" name="discount" id="" class="form-control" value="<%= producto.discount %>">
                </div>
                <div class="form-group">
                    <label for="">Imagen</label>
                    <input type="file" name="image" id="">
                </div>
                <div class="form-group">
                    <label for="">Categoria</label>
                    <select class="form-control" name="category" id="">
                        <% if(producto.category == 'in-sale') { %>
                        <option value="in-sale" selected>En Oferta</option>
                        <% } else { %>
                        <option value="visited" selected>Visitado</option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Editar" class="btn btn-primary">
                </div>
            </form>
            <form action="/productos/<%= producto.id %>?_method=DELETE" method='POST'>
                <input type="submit" value="Eliminar" class="btn btn-danger">
            </form>
        </div>
    </div>
</div>
<% include('../partials/footer.ejs') %>