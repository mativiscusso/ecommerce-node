<%- include('../partials/head.ejs')  %>
<%- include('../partials/topnav.ejs')  %>
<div class="container-fluid">
    <div class="row">
        <%- include('../partials/sidenav.ejs') %>
        <%- include('../partials/main.ejs', { titulo : 'Cargar Producto'}) %>
        <div class="container py-3">
            <form action="/productos" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">Nombre</label>
                    <input type="text" name="name" id="" class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Descripcion</label>
                    <textarea class="form-control" name="description" id="" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label for="">Precio</label>
                    <input type="number" name="price" id="" class="form-control" placeholder="$">
                </div>
                <div class="form-group">
                    <label for="">Descuento</label>
                    <input type="number" name="discount" id="" class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Imagen</label>
                    <input type="file" name="image" id="">
                </div>
                <div class="form-group">
                    <label for="">Categoria</label>
                    <select class="form-control" name="category" id="">
                        <option value="in-sale">En Oferta</option>
                        <option value="visited">Visitado</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Cargar" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>
<% include('../partials/footer.ejs') %>