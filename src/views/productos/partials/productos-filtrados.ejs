<!--Seccion: Productos-Todos-->
<section class="text-center my-4">
    <h3><%=productFilter[0].category.name%></h3>
    <!--Grid row-->
    <div class="row wow fadeIn">

        <% productFilter.forEach((producto)=>{ %>
        <!--Grid column-->
        <div class="col-lg-3 col-md-6 col-sm-6 col-6 mb-4">
            <!--Card-->

            <div class="card">

                <!--Card image-->
                <div class="view overlay">
                    <img src="/img/productos/<%=producto.image%>" class="card-img-top" alt="">
                    <a href="/productos/<%=producto.id%>">
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>
                <!--Card image-->

                <!--Card content-->
                <div class="card-body text-center">
                    <!--Category & Title-->
                    <a href="/productos/<%=producto.id%>" class=" dark-grey-text"><%= producto.name %> <br>
                    </a>
                    <h4 class="font-weight-bold text-center d-flex">
                        <strong>$<%= producto.price %></strong>
                    </h4>
                </div>
                <!--Card content-->

            </div>

            <!--Card-->
        </div>
        <% });%>

        <!--Grid column-->

    </div>
    <!--Grid row-->

</section>
<!--Seccion: Productos-Todos-->