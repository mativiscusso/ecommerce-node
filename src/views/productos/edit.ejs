<%- include('../admin/partials/head.ejs')  %> 

<%- include('../admin/partials/menu.ejs', {titulo : 'Editar Producto'})  %> 

<div class="container-fluid">
    <div class="row">
        <div class="container py-3">
            <form action="/productos/<%= producto.id %>?_method=PUT " method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">Nombre</label>
                    <input type="text" name="name" id="" class="form-control" value="<%= producto.name %>">
                </div>
                <div class="form-group">
                    <label for="">Descripcion</label>
                    <textarea class="form-control" name="description" id="" rows="3" ><%= producto.description %></textarea>
                </div>
                <div class="form-group">
                    <label for="">Precio</label>
                    <input type="number" name="price" id="" class="form-control" placeholder="$" value="<%= producto.price %>">
                </div>
                <div class="form-group">
                    <label for="">Descuento</label>
                    <input type="number" name="discount" id="" class="form-control" value="<%= producto.discount %>" maxlength="100">
                </div>
                <img src="/img/productos/<%= producto.image %>" alt="" width="15%"> <br>
                <div class="form-group pt-3">
                    <label for="">Imagen</label>
                    <input type="file" name="image" id="">
                    <input type="hidden" name="oldImage" value="<%= producto.image %>">
                </div>
                <div class="form-group">
                    <label for="">En oferta</label>
                    <input type="radio" name="inOffer" id="" value="true" <%= producto.inOffer == true ? 'checked' : '' %> > Si
                    <input type="radio" name="inOffer" id="" value="false" <%= producto.inOffer == false ? 'checked' : '' %> > No
                </div>
                <div class="form-group">
                    <label for="">Categoria</label>
                    <select class="form-control" name="categoryId" id="">
                        <option value="" default> Elige categoria</option>
                        <% for (const categoria of categorias) { %> 
                        <option value="<%= categoria.id %>" <%= categoria.id == producto.category.id ? 'selected' : ''%> 
                            ><%= categoria.name %> </option>
                        <% } %> 
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Agregar Producto" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../admin/partials/footer.ejs') %>